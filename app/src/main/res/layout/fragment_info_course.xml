<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:contentDescription="Foto" />

    <TextView
        android:id="@+id/name_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Name course"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_borde"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:stretchColumns="*">

            <TableRow android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:textSize="17dp"
                    android:text="Professor:" />

                <TextView
                    android:id="@+id/professor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:textSize="17dp"
                    android:text="Academic Space:" />

                <TextView
                    android:id="@+id/academic_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textStyle="italic"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:text="Day Time:" />

                <TextView
                    android:id="@+id/day_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

        </TableLayout>
    </RelativeLayout>

</LinearLayout>